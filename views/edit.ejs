<%- include("partials/_header") %>

    <body>
        <div class="tm-page-wrap mx-auto">
            <div class="position-relative">
                <%- include("partials/_navigation.ejs") %>
                    <div class="tm-welcome-container tm-fixed-header tm-fixed-header-3">
                        <div class="text-center">
                            <p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 mt-lg-0 mt-5 text-white mx-auto">
                                Talk to Us<br>about any question you have
                            </p>
                        </div>
                    </div>

                    <div id="tm-fixed-header-bg"></div> <!-- Header image -->
            </div>

            <!-- Page content -->
            <main>
                <div class="container-fluid px-0">
                    <div class="mx-auto tm-content-container">
                        <div class="row pb-3">
                            <div class="col-12">
                               
                            </div>
                        </div>
                        <div class="mx-auto pb-3 tm-about-text-container ">
                            <div class="row">
                                <div class="col-lg-12 mb-5">
                                    <form id="contact-form" 
                                    action="/photos/<%= photo.id %>?_method=PUT" 
                                    method="POST" 
                                    class="tm-contact-form"
                                    >
                                        <div class="form-group">
                                            <input type="text" name="title" class="form-control rounded-0" id="phototitle"
                                                placeholder="" value="<%= photo.title %>" required="" onclick="removeDefaultValue(this.id)" />
                                        </div>


                                        <div class="form-group">
                                            <textarea rows="8" name="description" class="form-control rounded-0" id="description"
                                                placeholder="" required="" onclick="removeDefaultValue2()"><%= photo.description %></textarea>
                                        </div>

                                        <div class="form-group mb-0">
                                            <button type="submit"
                                                class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Update</span></button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>




                </div>
            </main>

          
        </div>

        <script>

            function removeDefaultValue(param){
                document.getElementById(param).setAttribute("value" , "");
            }

            function removeDefaultValue2(){
                document.getElementById("description").innerText = "";
            }
        </script>
        <script src="/js/jquery-3.4.1.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="js/parallax.min.js"></script>
    </body>

    </html>